<?xml version="1.0"?>
<info>
	<id>integration_zimbra</id>
	<name>Zimbra integration</name>
	<summary>Integration of Zimbra</summary>
	<description><![CDATA[Zimbra integration into Nextcloud provides a dashboard widget for unread emails,
 one for upcoming events, a search provider for emails and the ability to search for Zimbra contacts in Nextcloud.

Nextcloud will suggest your Zimbra contacts addresses when you search for a contact via the top-right contacts menu
or when you search for someone to share a file to.]]></description>
	<version>1.0.13</version>
	<licence>agpl</licence>
	<author>Julien Veyssier</author>
	<namespace>Zimbra</namespace>
	<documentation>
		<developer>https://github.com/eneiluj/integration_zimbra</developer>
	</documentation>
	<category>integration</category>
	<category>dashboard</category>
	<website>https://github.com/eneiluj/integration_zimbra</website>
	<bugs>https://github.com/eneiluj/integration_zimbra/issues</bugs>
	<screenshot>https://github.com/eneiluj/integration_zimbra/raw/master/img/screenshot1.jpg</screenshot>
	<screenshot>https://github.com/eneiluj/integration_zimbra/raw/master/img/screenshot2.jpg</screenshot>
	<dependencies>
		<nextcloud min-version="26" max-version="32"/>
	</dependencies>
	<settings>
		<admin>OCA\Zimbra\Settings\Admin</admin>
		<admin-section>OCA\Zimbra\Settings\AdminSection</admin-section>
		<personal>OCA\Zimbra\Settings\Personal</personal>
		<personal-section>OCA\Zimbra\Settings\PersonalSection</personal-section>
	</settings>
</info>
